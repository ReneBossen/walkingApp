{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./scripts",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
